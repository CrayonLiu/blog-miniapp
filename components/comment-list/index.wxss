@import "/res/common.wxss";

.comment-list {
  display: flex;
  flex-direction: column;
  align-items: stretch;
  justify-content: flex-start;
}

.comment {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: flex-start;
  margin-bottom: 1em;
}

.left {
  width: 40px;
  min-width: 40px;
  max-width: 40px;
  height: 40px;
  border-radius: 4px;
}

.right {
  margin-left: 10px;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  justify-content: flex-start;
}

.comment-header {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.comment-header-name {
  color: #2ba245;
  font-size: small;
}

.comment-header-time {
  color: #aaa;
  font-size: x-small;
}

.comment-body {
  margin-top: 4px;
  font-size: small;
  color: #4d4d4d;
}

@media (min-width: 768px) {
  .comment {
    margin-bottom: 1.5em;
  }

  .left {
    width: 55px;
    min-width: 55px;
    max-width: 55px;
    height: 55px;
    border-radius: 6px;
  }

  .comment-header-name {
    font-size: medium;
  }

  .comment-header-time {
    font-size: small;
  }

  .comment-body {
    font-size: medium;
  }
}
